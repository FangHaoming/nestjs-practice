{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@nestjs-practice/auth": [
        "libs/auth/src/index"
      ],
      "@nestjs-practice/database": [
        "libs/database/src/index"
      ],
      "@nestjs-practice/shared": [
        "libs/shared/src/index"
      ],
      "@auth/*": [
        "libs/auth/src/*"
      ],
      "@database/*": [
        "libs/database/src/*"
      ],
      "@shared/*": [
        "libs/shared/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}