{
  "name": "nestjs-practice",
  "version": "0.0.1",
  "description": "NestJS Monorepo Practice",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build:libs": "yarn workspace @nestjs-practice/shared run build && concurrently \"yarn workspace @nestjs-practice/auth run build\" \"yarn workspace @nestjs-practice/database run build\"",
    "build": "yarn build:libs && concurrently \"nest build api\" \"nest build admin\"",
    "build:libs:watch": "concurrently \"yarn workspace @nestjs-practice/shared run build:watch\" \"yarn workspace @nestjs-practice/auth run build:watch\" \"yarn workspace @nestjs-practice/database run build:watch\"",
    "build:api": "yarn build:libs && nest build api",
    "build:admin": "yarn build:libs && nest build admin",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:api": "nest start api",
    "start:admin": "nest start admin",
    "start:dev": "nest start --watch",
    "start:api:dev": "concurrently \"yarn build:libs:watch\" \"nest start api --watch\"",
    "start:admin:dev": "concurrently \"yarn build:libs:watch\" \"nest start admin --watch\"",
    "dev:libs": "yarn build:libs:watch",
    "dev:api": "concurrently \"yarn build:libs:watch\" \"nest start api --watch\"",
    "dev:admin": "concurrently \"yarn build:libs:watch\" \"nest start admin --watch\"",
    "start:api:ts-node": "ts-node -r tsconfig-paths/register apps/api/src/main.ts",
    "start:admin:ts-node": "ts-node -r tsconfig-paths/register apps/admin/src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/nestjs-practice/main",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nestjs-practice/test/jest-e2e.json",
    "test:e2e:api": "jest --config ./apps/api/test/jest-e2e.json",
    "test:e2e:admin": "jest --config ./apps/admin/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^8.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.75.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "keywords": []
}
